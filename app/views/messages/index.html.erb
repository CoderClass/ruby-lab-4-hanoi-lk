<h1>Room: <%= @room.name %></h1>

<div class="messages">
  <%= render @messages %>
</div>


	<%= form_for [@room,Message.new], remote: true do |f| %>
	<div class="form-inline">
		<%= f.text_field :content, class: 'form-control', id: 'msg_text_field' %>
		<%= f.submit 'Send', class: 'btn btn-primary', data:{disable_with: "Adding...."} %>
	</div>
	<% end %>

